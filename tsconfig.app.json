{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["vite/client", "node"]
  },
  "include": ["src", "env.d.ts"]
}
